<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/btc"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_currency"
        android:text="@string/id_test"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/icon"
        android:layout_toEndOf="@id/icon"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deliver"
        android:layout_toRightOf="@+id/id_currency"
        android:layout_toEndOf="@id/id_currency"
        android:text="@string/deliver"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_currency"
        android:text="@string/name_test"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_toRightOf="@+id/deliver"
        android:layout_toEndOf="@id/deliver"
        android:textSize="20sp"
        android:textStyle="normal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usd_price"
        android:text="@string/price_usd_test"
        android:layout_toLeftOf="@id/usd_label"
        android:layout_toStartOf="@id/usd_label"
        android:layout_marginTop="30dp"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usd_label"
        android:text="@string/usd_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rub_price"
        android:text="@string/price_rub_test"
        android:layout_toLeftOf="@id/rub_label"
        android:layout_toStartOf="@id/rub_label"
        android:layout_marginTop="60dp"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rub_label"
        android:text="@string/rub_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>